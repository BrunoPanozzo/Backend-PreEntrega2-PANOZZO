<div class="item-list-container">
    <h1 class="titulo-importante">Administraci칩n de los Productos de la Tienda</h1>
<div class="text-center mb-1">
    <button type="button" class="btn btn-info text-decoration
                    text-center btn-agregarItem">Agregar producto
    </button></div>
    <div class="item-list" id="productsList">
        {{#each allProducts.docs}}
        <div class="card text-bg-light mb-3 item" id='{{this.id}}'>
            <div class="card-header">{{category}}</div>
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <img src="/images/productos/{{thumbnail}}" alt={{title}} width="270" />
                <p class="card-text item-precio">$ {{this.price}}</p>
                <p class="card-text item-stock">Stock Disponible: {{this.stock}}</p>
                <p class="card-text item-descripcion">{{this.description}}</p>
            </div>
            <div class"col align-self-center">
                <button type="button" class="btn btn-danger text-decoration
                    text-center btn-eliminarItem" id='{{this.id}}'>Eliminar producto
                </button>
            </div>
        </div>
        {{/each}}
    </div>
    <div>
            <p class="card-text item-precio">P치gina {{allProducts.page}}</p>
            {{#if allProducts.hasPrevPage}}
            <a href="/products?page={{allProducts.prevPage}}" class="card-text item-precio">P치gina
                anterior</a>
            {{/if}}
            {{#if allProducts.hasNextPage}}
            <a href="/products?page={{allProducts.nextPage}}" class="card-text item-precio">P치gina
                siguiente</a>
            {{/if}}
        </div>
</div>